@model IEnumerable<KvieskTaxa.Database.Models.Driver>

@{
    ViewBag.Title = "Vairuotojai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vairuotojai</h2>

<p>
    @Html.ActionLink("Pridėti vairuotoją", "CreateDriver", "Administrator")
</p>
<table class="table">
    <tr>
        <th>
            Vartotojo vardas
        </th>
        <th>
            Vardas
        </th>
        <th>
            Vietų skaičius
        </th>
        <th>
            Vaiko kėdutė
        </th>
        <th>
            Veža gyvūnus
        </th>
        <th>
            Leidžia rūkyti
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seats)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsChildSeat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAnimals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsSmoking)
        </td>
        <td>
            @Html.ActionLink("Keisti vežimo sąlygas", "editTransportationSettings", new { controller = "Administrator", area = "Administrator", id = item.DriverId })
            @Html.ActionLink("Redaguoti", "editDriver", new { controller = "Administrator", area = "Administrator", id = item.DriverId }) |
            @Html.ActionLink("Trinti", "DeleteDriver", new { controller = "Administrator", area = "Administrator", id = item.DriverId })
        </td>
    </tr>
}

</table>
