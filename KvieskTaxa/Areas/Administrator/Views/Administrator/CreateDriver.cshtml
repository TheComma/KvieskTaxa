@model KvieskTaxa.Database.Models.Driver

@{
    ViewBag.Title = "Pridėti vairuotoją";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Pridėti vairuotoją</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Vairuotojas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="User.username">Vartotojo vardas</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="User.password">Slaptažodis</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Vardas</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Seats">Vietų skaičius</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Seats, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Seats, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IsChildSeat">Vaiko kėdutė</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsChildSeat)
                    @Html.ValidationMessageFor(model => model.IsChildSeat, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IsAnimals">Veža gyvūnus</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsAnimals)
                    @Html.ValidationMessageFor(model => model.IsAnimals, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IsSmoking">Leidžia rūkyti</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsSmoking)
                    @Html.ValidationMessageFor(model => model.IsSmoking, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Pridėti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atgal į sąrašą", "GetDrivers", "Administrator")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
